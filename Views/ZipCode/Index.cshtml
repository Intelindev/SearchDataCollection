@model SearchDataCollection.Models.ExcelUploadViewModel

@{
    ViewData["Title"] = "Importar CSV";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-table@1.23.2/dist/bootstrap-table.min.css">
<div class="d-flex justify-content-between align-items-center mb-2">
    <h2>Lista de ZipCodes</h2>
    <a class="btn btn-primary" asp-area="" asp-controller="ZipCode" asp-action="UploadZipCodeFile">Upload ZipCode File</a>
</div>

<div class="table-responsive">
    <table id="ZipCodeTable">
        <thead>
            <tr>
                <th data-field="zipCode">ZipCode</th>
                <th data-field="primaryCountyName">PrimaryCountyName</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#ZipCodeTable').bootstrapTable({
                rowHeight: 50,
                method: 'get', // O 'get' según tu configuración
                url: '@Url.Action("GetZipCodes", "ZipCode")',
                pagination: true,
                search: true,
                pageSize: 10,
                totalField: 'total',
                sidePagination: 'server', // Indica paginación del lado del servidor
            });

        });
    </script>
}