@model SearchDataCollection.Models.CsvForm // Ajusta el modelo seg√∫n tu estructura

@{
    ViewData["Title"] = "Importar CSV";
}

<h2>Importar Archivo CSV</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Csv" asp-action="UploadCvsFile" onsubmit="showLoader()">
    <div class="form-group row mb-2">
        <label asp-for="SearchTerm" class="form-label"></label>
        <input asp-for="SearchTerm" class="form-control" />
    </div>
    <div class="form-group row mb-2">
        <label for="file" class="form-label">Seleccionar archivo CSV</label>
        <input type="file" class="form-control" id="file" name="file">
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary ">Importar</button>
    </div>
</form>

<div id="loader" style="display:none;">
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function showLoader() {
            document.getElementById('loader').style.display = 'block';
        }
    </script>
}